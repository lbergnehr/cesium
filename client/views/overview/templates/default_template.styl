.task-row
	width 100%
	font-size 0

.task
	font-size 12px
	vertical-align top
	font-family "Arial"
	display inline-block
	height 100%
	div
		display relative
		margin-left auto
		margin-right auto
		height 80%
		width 80%

.task-success
	color #5cb85c

.task-failure
	color #d9534f

.task-running
	color blue
